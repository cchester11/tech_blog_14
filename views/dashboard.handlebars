<div class="container-fluid mt-5 mb-3 justify-content-end">
  <a id="createPostPageBtn" class="btn btn-lg btn-primary mb-3" href="#" role="button">Create a New Post</a>
  {{#each posts as |post|}}
  <div class="container-fluid">
    <div class="card">
      <div class="card-body bg-dark text-light">
        <h5 class="card-title">{{post.id}}</h5>
        <p class="card-text font-weight-light">{{post.title}}</p>
        <p class="card-text font-weight light">{{post.content}}</p> 
        <a href="/updatePost/{{post.id}}"> <button class="btn btn-primary" type="submit" id="updatePg-btn">Update</button> </a>
        <button class="btn btn-primary" type="submit" data-count="{{post.id}}" id="deletePost-btn">Delete</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script src="/javascript/dashboard.js"></script>
<script src="/javascript/delete.js"></script>